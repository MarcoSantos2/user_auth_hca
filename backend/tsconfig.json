{
    "compilerOptions": {
      "emitDecoratorMetadata": true, 
      "experimentalDecorators": true, 
      "target": "ES6",
      "module": "commonjs",
      "outDir": "./dist",      
      "rootDir": "./src",
      "strict": true,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "typeRoots": ["./node_modules/@types", "./src/types"] // Added typeRoots
    },
    "include": ["src/**/*.ts"],
    "exclude": ["node_modules"]
  }
  